extends ../../layouts/default

block head
  title Forum

block neck
  link(rel='stylesheet', href='/views/index.min.css?#{cacheBreaker}')

block body
  div.row
    div.col-sm-12
      div.page-header
        h1 #{__('Forum')}
  div.row
    div.col-sm-12
     if user && user.username
       form(name="Question",method="post" action="/forum/validate")
          h3 #{__('Ajouter une question')}
          br
          input(type="text", name="titre", placeholder="titre")

          br
          br

          textarea(name="contenu" placeholder=" contenu de la question")
          br
          br
          input(type="submit", value="Valider")

   



    div.col-sm-12
     h3 #{__('liste des questions')}


      table.table
        each question in questions
          tr
            td
              a(href='/commentaire/?test= #{question.titre}') #{question.titre}


    div.col-sm-2
    h3 #{__('Reponses')}




